                                    <TextBlock Grid.Column="1" Text="王小虎" Padding="10"/>
                                    <TextBlock Grid.Column="2" Text="上海市普陀区金沙江路 1518 弄" Padding="10"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </vista:VistaLoading>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <vista:VistaButton x:Name="toggleCustomLoadingBtn" Content="切换加载状态" Click="ToggleCustomLoading_Click" Margin="0,0,10,0"/>
                </StackPanel>

                <!-- 服务方式调用 -->
                <TextBlock Text="服务方式调用" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <vista:VistaButton x:Name="showFullscreenLoadingBtn" Content="显示全屏加载" Click="ShowFullscreenLoading_Click" Margin="0,0,10,0"/>
                    <vista:VistaButton x:Name="showTargetLoadingBtn" Content="显示目标加载" Click="ShowTargetLoading_Click" Margin="0,0,10,0"/>
                    <vista:VistaButton x:Name="closeLoadingBtn" Content="关闭加载" Click="CloseLoading_Click" IsEnabled="False"/>
                </StackPanel>
                <Border x:Name="targetElement" BorderBrush="#DCDFE6" BorderThickness="1" Background="White" 
                        Width="400" Height="150" Margin="0,0,0,40">
                    <TextBlock Text="这是目标元素，点击上方按钮可以在此元素上显示加载遮罩" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" 
                               TextWrapping="Wrap" Margin="20"/>
                </Border>

                <!-- VistaMessageBox 演示 -->
                <TextBlock Text="VistaMessageBox 弹框" FontSize="24" FontWeight="Bold" Margin="0,40,0,30" />

                <!-- 消息提示 -->
                <TextBlock Text="消息提示" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <vista:VistaButton x:Name="alertBtn" Content="点击打开 Message Box" Click="AlertButton_Click" Margin="0,0,10,0"/>
                </StackPanel>

                <!-- 确认消息 -->
                <TextBlock Text="确认消息" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <vista:VistaButton x:Name="confirmBtn" Content="点击打开 Message Box" Click="ConfirmButton_Click" Margin="0,0,10,0"/>
                </StackPanel>

                <!-- 提交内容 -->
                <TextBlock Text="提交内容" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,40">
                    <vista:VistaButton x:Name="promptBtn" Content="点击打开 Message Box" Click="PromptButton_Click" Margin="0,0,10,0"/>
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- 消息容器（放在最上层） -->
        <Canvas x:Name="messageContainer" Grid.Row="0" Panel.ZIndex="1000" />
    </Grid>
</Window>