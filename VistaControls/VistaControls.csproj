<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net6.0-windows;net8.0-windows</TargetFrameworks>
        <Nullable>enable</Nullable>
        <UseWPF>true</UseWPF>
        
        <!-- NuGet 包元数据 -->
        <Version>1.0.0</Version>
        <Authors>VistaControls</Authors>
        <Company>VistaControls</Company>
        <Product>VistaControls</Product>
        <Description>一个基于 C# 和 WPF 的自定义控件库，提供美观、易用的 Windows 桌面应用程序控件组件。支持 .NET 6 和 .NET 8。</Description>
        <PackageId>VistaControls</PackageId>
        <PackageVersion>1.0.0</PackageVersion>
        <PackageTags>WPF;Controls;UI;ElementUI;Windows</PackageTags>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/yourusername/VistaControls</RepositoryUrl>
        <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <Resource Include="icons\*.png" />
      <Resource Include="icons\*.svg" />
    </ItemGroup>
    
    <ItemGroup>
      <PackageReference Include="SharpVectors" Version="1.8.0" />
    </ItemGroup>

</Project>
