<Window x:Class="VistaControls.VistaMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vista="clr-namespace:VistaControls"
        Title="{Binding Title}"
        Width="420"
        Height="Auto"
        MinWidth="300"
        MinHeight="150"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height">
    <Window.Resources>
        <Style TargetType="Window" x:Key="MessageBoxWindowStyle">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>
    <Border Background="White"
            CornerRadius="4"
            BorderBrush="#DCDFE6"
            BorderThickness="1"
            Margin="0">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="10" ShadowDepth="2"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Border Grid.Row="0" 
                    Background="#F5F7FA" 
                    BorderBrush="#DCDFE6" 
                    BorderThickness="0,0,0,1"
                    Height="50">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="titleText" 
                               Grid.Column="0"
                               Text="{Binding Title}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="20,0,10,0"/>
                    <Button x:Name="closeButton"
                            Grid.Column="1"
                            Content="✕"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#909399"
                            FontSize="18"
                            Cursor="Hand"
                            Click="CloseButton_Click"
                            Visibility="Collapsed">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F7FA"/>
                                        <Setter Property="Foreground" Value="#409EFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- 内容区域 -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 图标和消息 -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 图标 -->
                    <Border x:Name="iconContainer"
                            Grid.Column="0"
                            Width="40"
                            Height="40"
                            Margin="0,0,15,0"
                            Visibility="Collapsed">
                        <TextBlock x:Name="iconText"
                                   FontSize="24"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- 消息文本 -->
                    <TextBlock x:Name="messageText"
                               Grid.Column="1"
                               Text="{Binding Message}"
                               TextWrapping="Wrap"
                               FontSize="14"
                               Foreground="#606266"
                               VerticalAlignment="Center"/>
                </Grid>

                <!-- 输入框（用于 prompt） -->
                <Grid x:Name="inputContainer" Grid.Row="1" Visibility="Collapsed" Margin="0,0,0,20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="inputBox"
                             Grid.Row="0"
                             Padding="8,6"
                             BorderBrush="#DCDFE6"
                             BorderThickness="1"
                             FontSize="14"
                             VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4">
                                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <TextBlock x:Name="inputErrorText"
                               Grid.Row="1"
                               Foreground="#F56C6C"
                               FontSize="12"
                               Margin="0,5,0,0"
                               Visibility="Collapsed"/>
                </Grid>
            </Grid>

            <!-- 按钮区域 -->
            <Border Grid.Row="2"
                    Background="#F5F7FA"
                    BorderBrush="#DCDFE6"
                    BorderThickness="0,1,0,0"
                    Padding="20,12">
                <StackPanel x:Name="buttonContainer"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <vista:VistaButton x:Name="cancelButton"
                                       Content="{Binding CancelButtonText}"
                                       ButtonType="Default"
                                       ButtonSize="Small"
                                       Round="True"
                                       Padding="15,6"
                                       MinWidth="70"
                                       Margin="0,0,10,0"
                                       Click="CancelButton_Click"
                                       Visibility="Collapsed"/>
                    <vista:VistaButton x:Name="confirmButton"
                                       Content="{Binding ConfirmButtonText}"
                                       ButtonType="Primary"
                                       ButtonSize="Small"
                                       Round="True"
                                       Padding="15,6"
                                       MinWidth="70"
                                       Click="ConfirmButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>

